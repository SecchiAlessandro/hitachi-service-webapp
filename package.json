{
  "name": "hitachi-service-webapp",
  "version": "1.0.0",
  "description": "Hitachi Service Department Web Application",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start"
  },
  "keywords": ["hitachi", "service", "maintenance", "webapp"],
  "author": "Hitachi Service Department",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
} 